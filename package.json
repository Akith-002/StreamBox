{
  "name": "streambox-monorepo",
  "version": "1.0.0",
  "description": "StreamBox - Full-stack cross-platform movie browsing app with monorepo architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=@streambox/mobile",
    "mobile:android": "npm run android --workspace=@streambox/mobile",
    "mobile:ios": "npm run ios --workspace=@streambox/mobile",
    "shared:build": "npm run build --workspace=@streambox/shared",
    "shared:watch": "npm run watch --workspace=@streambox/shared",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react-native",
    "expo",
    "monorepo",
    "movies",
    "tmdb"
  ],
  "author": "StreamBox Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
